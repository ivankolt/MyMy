                    <TextBlock HorizontalAlignment="Left" Margin="22,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                    </TextBlock>

                    <TextBlock  HorizontalAlignment="Left" Margin="37,166,0,0" TextWrapping="Wrap" Text="S =" VerticalAlignment="Top"/>
                    <TextBlock x:Name ="S" HorizontalAlignment="Left" Margin="135,166,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="37,147,0,0" TextWrapping="Wrap" Text="P =" VerticalAlignment="Top"/>
                    <TextBlock x:Name="Per" HorizontalAlignment="Left" Margin="135,145,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
                    <Button Content="Сгенерировать число" HorizontalAlignment="Left" Margin="438,44,0,0" VerticalAlignment="Top" Width="178" Click="Button_Click_1"/>
