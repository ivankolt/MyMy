                    <TextBlock HorizontalAlignment="Left" Margin="438,120,0,0" TextWrapping="Wrap" Text="СУММА ЕГО ЧИСЕЛ" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="438,145,0,0" TextWrapping="Wrap" Text="ПРОИЗВЕДЕНИЕ ЧИСЕЛ" VerticalAlignment="Top"/>
                    <TextBlock x:Name="Random" HorizontalAlignment="Left" Margin="590,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                    <TextBlock  x:Name="Random1" HorizontalAlignment="Left" Margin="590,166,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                    <TextBlock  x:Name="Random2" HorizontalAlignment="Left" Margin="590,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Я вторая">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Я самый главный" Background="Aqua" HorizontalAlignment="Left" Margin="267,37,0,0" VerticalAlignment="Top" Width="223" Height="53" Click="Button_Click_2"/>
                    <Image x:Name ="MyImage" HorizontalAlignment="Left" Height="291" Margin="34,90,0,0" VerticalAlignment="Top" Width="713"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
